extends layout

block content
    h1 Sign up

    if errors
        div(class="card text-white bg-danger mb-3")
            div(class="card-body")
                ul.my-errors
                    for error in errors
                        li= error.msg

    div(class="card" class="form-login")
        div(class="card-body")

            -data = data || {}

            form(action="" method="POST")
                label(for="email") Email :
                input(
                    type="text"
                    id="email"
                    name="email"
                    class="form-control"
                    value=data.email
                )

                label(for="password") Password :
                input(
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                )

                input(
                    type="submit"
                    value="Register"
                    class="btn btn-lg btn-primary btn-block"
                )
