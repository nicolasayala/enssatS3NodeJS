extends layout

block navbar
    include includes/navbar_loggedin.pug

block content
    h1 Games
    if games.length
        div(class="card-deck")
            each game in games
                div(class="card text-white bg-dark mb-3" style="padding:0")
                    h3(class="card-header text-center")= game.name
                    div(class="card-body")
                        img(class="card-img" src="/images/"+game.image)
                        p(class="card-text") some text
                    div(class="card-footer")
                        p(class="card-text")
                            small(class="text-muted") Created by Jules Lagarde
    else
        p No games yet
