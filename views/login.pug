extends layout

block content
    h1 Sign in

    -data = data || {}

    if errors
        ul.my-errors
            for error in errors
                li= error.msg

    form(action="" method="POST" class="form-registration")
        label(for="email") Email :
        input(
            type="text"
            id="email"
            name="email"
            class="form-control"
            value=data.email
        )

        label(for="password") Password :
        input(
            type="passwordCreate an account"
            id="password"
            name="password"
            class="form-control"
        )

        input(
            type="submit"
            value="Sign in"
            class="btn btn-lg btn-primary btn-block"
        )
    div(class="panel panel-default")
        a(href="./register") Sign up
