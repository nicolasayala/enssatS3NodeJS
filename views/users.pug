extends layout

block navbar
    include includes/navbar_loggedin.pug

block content
    h1 Users
    if users.length
        table(class="table table-striped table-bordered table-hover table-sm")
            thead(class="thead-dark")
                tr
                    th(scope="col") Email
                    th(scope="col") Admin
                    th(scope="col") Banned
            tbody
                each user in users
                    -color = ''
                    if user.isBanned
                        -color = 'table-danger'
                    else if user.isAdmin
                        -color = 'table-primary'
                    tr(class=color)
                        td= user.email
                        td
                            form(action="" method="POST")
                                input(type="checkbox" id=user.email name=user.email class="form-control" checked=user.isAdmin onChange="this.form.submit()")
                        td
                            form(action="" method="POST")
                                input(type="checkbox" id=user.email name=user.email class="form-control" checked=user.isBanned onChange="this.form.submit()")
    else
        p No users yet
